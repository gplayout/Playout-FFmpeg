<vbase:BaseWindowView x:Class="Playout.UI.Controls.OverlayEditors.CrawlEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:vbase="clr-namespace:Playout.UI.Base"
    xmlns:metro="http://schemas.codeplex.com/elysium"
    xmlns:params="http://schemas.codeplex.com/elysium/params"
    xmlns:extra="http://schemas.extra.com/ui"
    Title="Edit Crawk Overlay" Width="740" Height="370" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" VerticalContentAlignment="Center"
                IsChecked="{Binding ValidatesOnDataErrors=True,Path=ReadFromFile,UpdateSourceTrigger=PropertyChanged}"
                Margin="3">
                    <Label>Read From File:</Label>
                </CheckBox>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
                    <TextBox  Width="300" HorizontalAlignment="Left"
                IsEnabled="{Binding ValidatesOnDataErrors=True,Path=ReadFromFile,UpdateSourceTrigger=PropertyChanged}"     
                Text="{Binding ValidatesOnDataErrors=True,Path=FilePath,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>
                    <metro:CommandButton HorizontalAlignment="Left" Margin="3"
                IsEnabled="{Binding ValidatesOnDataErrors=True,Path=ReadFromFile,UpdateSourceTrigger=PropertyChanged}"     
                Name="btnSelectFile" Click="btnSelectFile_Click" VerticalAlignment="Center"
                Style="{StaticResource EditSmallCommandButtonStyle}" />
                </StackPanel>
                <!---->
            <Label Grid.Row="1" Grid.Column="0"
                Margin="3">Text:</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Width="300" HorizontalAlignment="Left"
                Text="{Binding ValidatesOnDataErrors=True,Path=Text,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>
            <!---->
                    <Label Grid.Row="2" Grid.Column="0" Margin="3">Color:</Label>
                    <xctk:ColorPicker Grid.Row="2" Grid.Column="1" UsingAlphaChannel="False" Width="130"
                SelectedColor="{Binding ValidatesOnDataErrors=True,Path=Color,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>
                    <Label Grid.Row="2" Grid.Column="2" Margin="3">Font Name:</Label>
                    <ComboBox Grid.Row="2" Grid.Column="3" ItemsSource="{Binding Path=Fonts}"  Width="130"
                Text="{Binding ValidatesOnDataErrors=True,Path=FontName,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>
                    <Label Grid.Row="2" Grid.Column="4"
                Margin="3">Font Size:</Label>
                    <extra:IntegerUpDown Grid.Row="2" Grid.Column="5" AllowSpin="True" ShowButtonSpinner="True" Width="130"
                Value="{Binding ValidatesOnDataErrors=True,Path=FontSize,UpdateSourceTrigger=PropertyChanged}"
                Minimum="8" Maximum="100" HorizontalAlignment="Left"
                Margin="3"/>
                    <!---->
            <Label Grid.Row="3" Grid.Column="0"
                Margin="3">Position Left:</Label>
            <extra:IntegerUpDown Grid.Row="3" Grid.Column="1" AllowSpin="True" ShowButtonSpinner="True" Width="130"
                Value="{Binding ValidatesOnDataErrors=True,Path=PositionLeft,UpdateSourceTrigger=PropertyChanged}"
                Minimum="0" Maximum="2000" HorizontalAlignment="Left"
                Margin="3"/>
            <Label Grid.Row="3" Grid.Column="2"
                Margin="3">Position Top:</Label>
            <extra:IntegerUpDown Grid.Row="3" Grid.Column="3" AllowSpin="True" ShowButtonSpinner="True" Width="130"
                Value="{Binding ValidatesOnDataErrors=True,Path=PositionTop,UpdateSourceTrigger=PropertyChanged}"
                Minimum="0" Maximum="2000" HorizontalAlignment="Left"
                Margin="3"/>
            <Label Grid.Row="3" Grid.Column="4"
                Margin="3">Back Color:</Label>
            <xctk:ColorPicker Grid.Row="3" Grid.Column="5" UsingAlphaChannel="False" Width="130"
                SelectedColor="{Binding ValidatesOnDataErrors=True,Path=BackColor,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>
            <!---->
                    <Label Grid.Row="4" Grid.Column="0" Margin="3">Shadow:</Label>
                    <metro:ToggleSwitch Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"
                 IsChecked="{Binding ValidatesOnDataErrors=True,Path=Shadow,UpdateSourceTrigger=PropertyChanged}"
                 Margin="3"/>
                    <Label Grid.Row="4" Grid.Column="2"
                 Margin="3">Shadow Color:</Label>
                    <xctk:ColorPicker Grid.Row="4" Grid.Column="3" UsingAlphaChannel="False" Width="130"
                 SelectedColor="{Binding ValidatesOnDataErrors=True,Path=ShadowColor,UpdateSourceTrigger=PropertyChanged}"
                 Margin="3"/>
                    <Label Grid.Row="4" Grid.Column="4" Margin="3">Text Align:</Label>
                    <ComboBox Grid.Row="4" Grid.Column="5" ItemsSource="{Binding Path=TextAligns}"  Width="130"
                Text="{Binding ValidatesOnDataErrors=True,Path=TextAlign,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>
                    <!---->
            <Label Grid.Row="5" Grid.Column="0"
                Margin="3">Transparency:</Label>
            <metro:ToggleSwitch Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"
                IsChecked="{Binding ValidatesOnDataErrors=True,Path=Transparency,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>
            <Label Grid.Row="5" Grid.Column="2"
                Margin="3">Scrolling:</Label>
            <metro:ToggleSwitch Grid.Row="5" Grid.Column="3" HorizontalAlignment="Left"
                IsChecked="{Binding ValidatesOnDataErrors=True,Path=Scrolling,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>
            <Label Grid.Row="5" Grid.Column="4"
                Margin="3">Scrolling Speed:</Label>
            <extra:IntegerUpDown Grid.Row="5" Grid.Column="5" AllowSpin="True" ShowButtonSpinner="True" Width="130"
                Value="{Binding ValidatesOnDataErrors=True,Path=ScrollingSpeed,UpdateSourceTrigger=PropertyChanged}"
                Minimum="-2000" Maximum="2000" HorizontalAlignment="Left"
                Margin="3"/>
                
            <Label Grid.Row="6" Grid.Column="0"
                Margin="3">Scrolling Direction:</Label>
            <ComboBox Grid.Row="6" Grid.Column="1" ItemsSource="{Binding Path=CrawlDirections}"  Width="130"
                Text="{Binding ValidatesOnDataErrors=True,Path=Direction,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>
                                
            <!--<Label Grid.Row="6" Grid.Column="0"
                Margin="3">Enabled:</Label>
            <metro:ToggleSwitch Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left"
                IsChecked="{Binding ValidatesOnDataErrors=True,Path=Enabled,UpdateSourceTrigger=PropertyChanged}"
                Margin="3"/>-->
        </Grid>
        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Name="btnOk" Click="btnOk_Click" IsEnabled="{Binding Path=IsValid}"
                                Margin="{Binding RelativeSource={RelativeSource Self}, Path=(params:General.BoldPadding), Mode=OneWay}">Save Changes</Button>
            </StackPanel>
        </Grid>
    </Grid>
</vbase:BaseWindowView>
